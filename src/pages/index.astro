---
import Layout from '../layouts/Layout.astro';

import CompaniesList from '../components/CompaniesList.astro';
import InProgressTags from '../components/InProgressTags.astro';
import ProjectsList from '../components/ProjectsList.astro';
import SocialLinks from '../components/SocialLinks.astro';
import { Image } from 'astro:assets';
import headshot from '../assets/images/headshot-3.webp';

