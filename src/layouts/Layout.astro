---
import './base.css';
import { SEO } from 'astro-seo'
import { join } from "node:path";
import { AstroFont } from "astro-font";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="keywords" content="Full Stack Developer, creative developer, experimental web dev, Elixir, Phoenix, React, WebGL" />
		<SEO
			title={title}
			description={'Personal website of Niklas Lepistö, a creative Full Stack Developer.'}
			openGraph={{
				basic: {
					title,
					image: 'https://niklas.lepisto.co/share-image.png',
					url: 'https://niklas.lepisto.co',
					type: 'website'
				}
			}}
			twitter={{
				title,
				imageAlt: 'Niklas Lepistö',
				image: 'https://niklas.lepisto.co/share-image.png',
				description: 'Personal website of Niklas Lepistö, a creative Full Stack Developer.',
				card: 'summary_large_image',
				site: '@laznic',
				creator: '@laznic'
			}}
		/>
		<AstroFont
		  config={[
			{
			  name: "TechnaSans",
			  src: [
				{
				  style: 'normal',
				  weight: 'normal',
				  path: join(process.cwd(), 'public', 'fonts', 'TechnaSans-Regular.otf'),
				  css: {
					"font-feature-settings": '"ss01"'
				  }
				},
			  ],
			  preload: false,
			  display: "swap",
			  fallback: "sans-serif",
			  cssVariable: "font-techna",
			},
			{
			  name: "GeistMono",
			  src: [
				{
				  style: 'normal',
				  weight: 'normal',
				  path: join(process.cwd(), 'public', 'fonts', 'GeistMonoVariableVF.woff2'),
				},
			  ],
			  preload: false,
			  display: "swap",
			  fallback: "sans-serif",
			  cssVariable: "font-geist-mono",
			},
		  ]}
		/>
	</head>
	<body class="bg-background">
		<slot />
	</body>
</html>